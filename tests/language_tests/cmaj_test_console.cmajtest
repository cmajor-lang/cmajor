## testConsole ("Writing multiple types including structs 1 2.5 [object Object] [object Object]")

processor test
{
    output stream float32 out;

    struct S
    {
        int i;
        float f;
    }

    void main()
    {
        let s = S (1, 2.0f);

        console <- "Writing multiple types including structs ";
        console <- 1 <- " ";
        console <- 2.5f <- " ";
        console <- s <- " " <- complex32 (1, 2);
        advance();
    }
}

