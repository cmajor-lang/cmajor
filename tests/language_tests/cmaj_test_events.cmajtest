## global

processor Ping (using Type)
{
    output event Type out;

    void main()
    {
        out <- Type (1); advance();
        loop { out <- Type (-1); advance(); }
    }
}

processor Forward (using Type)
{
    input event Type in;
    output event Type out;

    event in (Type i) { out <- i; }
}

