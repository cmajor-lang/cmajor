## runScript ({ frequency:44100, blockSize:32, samplesToRender:1000, subDir:"butterworth" })

graph filters [[ main ]]
{
    output stream float<2> low2, low3, low6, high4, high8;

    namespace Mode = std::filters::butterworth::Mode;

    node
    {
        noiseSource = NoiseSource (float<2>);
        l2 = std::filters (float<2>)::butterworth (2)::Processor (Mode::lowPass, 1000);
        l3 = std::filters (float<2>)::butterworth (3)::Processor (Mode::lowPass, 1000);
        l6 = std::filters (float<2>)::butterworth (6)::Processor (Mode::lowPass, 1000);
        h4 = std::filters (float<2>)::butterworth (4)::Processor (Mode::highPass, 1000);
        h8 = std::filters (float<2>)::butterworth (8)::Processor (Mode::highPass, 1000);
    }

    connection
    {
        noiseSource -> l2.in, l3.in, l6.in, h4.in, h8.in;

        l2.out -> low2;
        l3.out -> low3;
        l6.out -> low6;
        h4.out -> high4;
        h8.out -> high8;
    }
}


