## global

processor NoiseSource (using FrameType)
{
    output stream FrameType out;

    std::random::RNG rng;

    void main()
    {
        loop
        {
            FrameType v;

            for (wrap<FrameType.size> i)
                v[i] = rng.getBipolar();

            out <- v;

            advance();
        }
    }
}

