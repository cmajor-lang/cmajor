## performanceTest ({ sampleRate:44100, minBlockSize:4, maxBlockSize: 1024, samplesToRender:16384 })

processor ChangeTarget
{
    output event float out;

    void main()
    {
        float target = 1.0f;

        loop
        {
            out <- target;

            loop (100)
                advance();

            target = -target;
        }
    }
}

graph Test [[ main ]]
{
    output stream float out;

    node smoothers = std::smoothing::SmoothedValueStream (1.0f)[100];

    connection
    {
        ChangeTarget.out -> smoothers.in;
        smoothers.out -> out;
    }
}

